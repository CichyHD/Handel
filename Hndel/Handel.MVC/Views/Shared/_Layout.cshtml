<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="topNav">
            <div class="container">
                <div class="alignR">
                    <a><span class="fa fa-home"></span> @Html.ActionLink("Strona główna", "Index", "Home")</a>
                    <a><span class="fa fa-edit"></span> @Html.ActionLink("Rejestracja", "Index", "Register")</a>
                    <a><span class="fa fa-envelope"></span> @Html.ActionLink("Kontakt", "Index", "Contact")</a>
                    <a><span class="fa fa-shopping-cart"></span> @Html.ActionLink("Koszyk", "Index", "Cart")</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div id="gototop"> </div>

        <header id="header">
            <div class="row">
                <div class="span4">
                    <h1>
                        <a class="logo">
                            <span>Twe</span>
                            <img src="../Content/img/logo-bootstrap-shoping-cart.png" alt="bootstrap sexy shop">
                        </a>
                    </h1>
                </div>
            </div>
        </header>
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li>@Html.ActionLink("Strona główna","Index", "Home")</li>
                            <li class="">@Html.ActionLink("Koszule","Index", "Products")</li>
                        </ul>

                        <form action="#" class="navbar-search pull-left">
                            <input type="text" placeholder="Search" class="search-query span2">
                        </form>

                        <ul class="nav pull-right">
                            <li class="dropdown">
                                <div style="display: inline-block">@Html.ActionLink("Login", "Index", "Login")</div><div style="text-align: center; display: inline-block; padding: 8px;" data-toggle="dropdown" class="dropdown-toggle"> <b class="caret"></b></div>
                                <div class="dropdown-menu">
                                    <form class="form-horizontal loginFrm">
                                        <div class="control-group">
                                            <input type="text" class="span2" id="inputEmail" placeholder="Email">
                                        </div>
                                        <div class="control-group">
                                            <input type="password" class="span2" id="inputPassword" placeholder="Hasło">
                                        </div>
                                        <div class="control-group">
                                            <label class="checkbox">
                                                <input type="checkbox"> Zapamiętaj mnie
                                            </label>
                                            <button type="submit" class="shopBtn btn-block">Zaloguj</button>
                                        </div>
                                    </form>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/shop.js"></script>
</body>
</html>
