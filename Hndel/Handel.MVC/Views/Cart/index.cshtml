<div class="container">
    <div class="row">
        <div class="span12">
            <ul class="breadcrumb">
                <li><a>@Html.ActionLink("Strona główna", "Index", "Home")</a> <span class="divider">/</span></li>
                <li class="active">Koszyk</li>
            </ul>

            <div class="well well-small">
                <h1>Koszyk <small class="pull-right"> Przedmioty w koszyku: 2 </small></h1>
                <hr class="soften" />
                <table class="table table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>Produkt</th>
                            <th>Opis</th>
                            <th>Cena</th>
                            <th>Liczba</th>
                            <th>Podsumowanie</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td><img width="100" src="../Content/img/e.jpg" alt=""></td>
                            <td>Tutaj jakiś opis tej brzydkiej koszuli</td>
                            <td>50.00zł</td>
                            <td>
                                <input class="span1" style="max-width:34px" placeholder="1" id="appendedInputButtons" size="16" type="text" value="2">
                                <div class="input-append">
                                    <button class="btn btn-mini" type="button">-</button>
                                    <button class="btn btn-mini" type="button"> + </button>
                                    <button class="btn btn-mini btn-danger" type="button"><span class="icon-remove"></span></button>
                                </div>
                            </td>
                            <td>100.00zł</td>
                        </tr>

                        <tr>
                            <td><img width="100" src="../Content/img/e.jpg" alt=""></td>
                            <td>A ta kosuzla jest piękna</td>
                            <td>50.00zł</td>
                            <td>
                                <input class="span1" style="max-width:34px" placeholder="1" id="appendedInputButtons" size="16" type="text" value="2">
                                <div class="input-append">
                                    <button class="btn btn-mini" type="button">-</button>
                                    <button class="btn btn-mini" type="button"> + </button>
                                    <button class="btn btn-mini btn-danger" type="button"><span class="icon-remove"></span></button>
                                </div>
                            </td>
                            <td>100.00zł</td>
                        </tr>

                        <tr>
                            <td colspan="4" class="alignR"></td>
                            <td>Suma <div class="label label-primary alignL"> 200zł</div></td>
                        </tr>
                    </tbody>
                </table>


                <div class="white shopBtn btn-large"><span class="fa fa-arrow-left"></span> @Html.ActionLink("Kontynuuj zakupy", "Index", "Products") </div>
                <div class="white shopBtn btn-large pull-right"> @Html.ActionLink("Kupuj", "Index", "Login")<span class="fa fa-arrow-right"></span></div>
            </div>
        </div>
    </div> <!-- row -->
</div> <!-- container -->